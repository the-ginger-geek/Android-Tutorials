<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/light_blue_200</item>
        <item name="colorPrimaryDark">@color/light_blue_300</item>
        <item name="colorAccent">@color/red_300</item>
    </style>

    <style name="AppTheme.MainActivity" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/light_blue_200</item>
        <item name="colorPrimaryDark">@color/light_blue_300</item>
        <item name="colorAccent">@color/red_300</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.ColorActivity" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/light_blue_200</item>
        <item name="colorPrimaryDark">@color/light_blue_300</item>
        <item name="colorAccent">@color/red_300</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>
